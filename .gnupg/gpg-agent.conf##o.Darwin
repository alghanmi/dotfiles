# Cache gpg credentials for 1hr (this resets with every usage)
default-cache-ttl 3600

# Prompt for gpg credentials after 4hrs
max-cache-ttl 14400

# Cache SSH keys for 8hrs (this resets with every usage)
default-cache-ttl-ssh 28800

# Prompt for credentials after 16hrs
max-cache-ttl-ssh 57600

# SSH Configuration
use-standard-socket
enable-ssh-support

# PIN Entry
allow-loopback-pinentry
pinentry-program /usr/local/bin/pinentry-mac

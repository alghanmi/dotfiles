# Cache gpg credentials for 10min (this resets with every usage)
default-cache-ttl 600

# Prompt for gpg credentials after 2hrs
max-cache-ttl 7200

# Cache SSH keys for 2hrs (this resets with every usage)
default-cache-ttl-ssh 7200

# Prompt for credentials after 16hrs
max-cache-ttl-ssh 57600

# TTY Configuration
ttyname $GPG_TTY

# SSH Configuration
enable-ssh-support

# PIN Entry
#allow-loopback-pinentry
pinentry-program /opt/homebrew/bin/pinentry-mac

# Personal SSH Config
Include ~/.ssh/config.d/*.config


# GitHub Connection Preferences
Host github.com
  User git
  HostName github.com

  IdentitiesOnly yes
  IdentityFile ~/.ssh/id_rsa.pub
  PreferredAuthentications publickey

  ControlMaster auto
  ControlPersist yes
  ControlPath ~/.ssh/sockets/%C


# BitBucket Connection Preferences
Host bitbucket.org
  User git
  HostName bitbucket.org

  IdentitiesOnly yes
  IdentityFile ~/.ssh/id_rsa.pub
  PreferredAuthentications publickey

  ControlMaster auto
  ControlPersist yes
  ControlPath ~/.ssh/sockets/%C

# SSH Options
Host *
  AddKeysToAgent yes
  Compression yes
  ServerAliveInterval 120
  UseKeychain yes
  #VisualHostKey yes
